<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_itemV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/NomeMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="Nome"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/DataHora0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="DATA"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/placaCarreta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NomeMotorista"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="Placa Carreta"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/numero_Embarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placaCarreta"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="Numero Embarque"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/NumerolacreOEA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numero_Embarque"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="Lacre OEA"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>